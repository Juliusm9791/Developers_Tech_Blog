<div>
  <div class="mt-2">
    <div class="card-header text-primary border border-primary text-center fs-3">This is your posts <strong>{{username}}</strong>!</div>
  </div>
</div>
<button type="button" class="btn btn-primary my-3" id="addPostButton">Add New Post</button>

{{#each posts as |post|}}
<div class="card text-dark bg-light my-3">
  <a href="/dashboard/post/{{post.id}}" class="card-header d-inline-flex p-2 justify-content-between" style="text-decoration: none;">
    <div class="me-3" >
      <div><strong>{{post.title}}</strong></div>
    </div>
    <div class="ms-3">Posted on {{format_date createdAt}} {{format_time createdAt}}
    </div>
  </a>
  <div class="card-body">
    <p class="card-text">{{post.text}}</p>
  </div>
</div>
{{/each}}


<script>
  function redirect() {
    document.location.replace('/dashboard/addpost')
  }
  document
    .querySelector('#addPostButton')
    .addEventListener("click", redirect);
</script>